{
  "name": "js-tdd",
  "version": "1.0.0",
  "description": "Curso JS com TDD na pr√°tica.",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "reporter": ["text", "html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mtAlves/js-tdd.git"
  },
  "keywords": [
    "js",
    "tdd"
  ],
  "author": "Matheus Alves <mtzin44@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mtAlves/js-tdd/issues"
  },
  "homepage": "https://github.com/mtAlves/js-tdd#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "mocha": "^5.0.4",
    "nyc": "^11.6.0",
    "webpack": "^4.1.1"
  },
  "dependencies": {}
}
